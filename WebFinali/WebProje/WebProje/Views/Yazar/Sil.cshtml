@model WebProje.Models.Yazar
@{
    ViewBag.Title = "Sil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Properties/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

<h2 style="text-align:center; margin-top: 34px; font-size:30px"><b>YAZAR KAYIT SİLME SAYFASI</b></h2>
<br><br>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.YazarAd, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.YazarAd, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.YazarAd, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.YazarYas, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.YazarYas, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.YazarYas, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.YazarUlke, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.YazarUlke, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.YazarUlke, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10" style="padding-top:1rem;">
                    <input type="submit" value="Kayıt Sil" class="btn btn-default" style="background-color:#3a56c7; color:white; font-weight:bold; font-size:medium" />
                </div>
            </div>
        </div>
    }

<div>
    <h6 style="padding-top:0.5rem; padding-left: 1.5em;">@Html.ActionLink("Geri Dön", "Yazar_Listele")</h6>
</div>


